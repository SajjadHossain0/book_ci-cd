<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
			  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			  xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
			  name="BookByIdReport" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

	<!-- parameter -->
	<parameter name="bookId" class="java.lang.Integer"/>

	<!-- query -->
	<queryString language="SQL">
		<![CDATA[
            SELECT
                b.title,
                b.author,
                b.isbn,
                c.name AS category
            FROM
                book_manager.books b
            JOIN
                book_manager.categories c ON b.category_id = c.id
            WHERE
                b.id = $P{bookId}
        ]]>
	</queryString>

	<!-- fields -->
	<field name="title" class="java.lang.String"/>
	<field name="author" class="java.lang.String"/>
	<field name="isbn" class="java.lang.String"/>
	<field name="category" class="java.lang.String"/>

	<!-- background (optional, kept empty) -->
	<background>
		<band/>
	</background>

	<!-- title band -->
	<title>
		<band height="70">
			<staticText>
				<reportElement x="80" y="10" width="400" height="50"/>
				<textElement textAlignment="Center" verticalAlignment="Middle">
					<font size="22" isBold="true"/>
				</textElement>
				<text><![CDATA[BOOK INFORMATION]]></text>
			</staticText>
		</band>
	</title>

	<!-- detail band -->
	<detail>
		<band height="160">
			<staticText>
				<reportElement x="40" y="5" width="120" height="30"/>
				<textElement>
					<font size="14"/>
				</textElement>
				<text><![CDATA[Title :]]></text>
			</staticText>
			<textField>
				<reportElement x="160" y="5" width="210" height="30"/>
				<textElement>
					<font size="14"/>
				</textElement>
				<textFieldExpression><![CDATA[$F{title}]]></textFieldExpression>
			</textField>

			<staticText>
				<reportElement x="40" y="40" width="120" height="30"/>
				<textElement>
					<font size="14"/>
				</textElement>
				<text><![CDATA[Author :]]></text>
			</staticText>
			<textField>
				<reportElement x="160" y="40" width="210" height="30"/>
				<textElement>
					<font size="14"/>
				</textElement>
				<textFieldExpression><![CDATA[$F{author}]]></textFieldExpression>
			</textField>

			<staticText>
				<reportElement x="40" y="80" width="120" height="30"/>
				<textElement>
					<font size="14"/>
				</textElement>
				<text><![CDATA[ISBN :]]></text>
			</staticText>
			<textField>
				<reportElement x="160" y="80" width="210" height="30"/>
				<textElement>
					<font size="14"/>
				</textElement>
				<textFieldExpression><![CDATA[$F{isbn}]]></textFieldExpression>
			</textField>

			<staticText>
				<reportElement x="40" y="114" width="120" height="30"/>
				<textElement>
					<font size="14"/>
				</textElement>
				<text><![CDATA[Category :]]></text>
			</staticText>
			<textField>
				<reportElement x="160" y="114" width="210" height="30"/>
				<textElement>
					<font size="14"/>
				</textElement>
				<textFieldExpression><![CDATA[$F{category}]]></textFieldExpression>
			</textField>
		</band>
	</detail>

</jasperReport>
