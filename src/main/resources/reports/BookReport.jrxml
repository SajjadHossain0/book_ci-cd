<!-- Corrected JRXML -->
<jasperReport name="BookReport" language="java" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
	<parameter name="TABLE_DATA_SOURCE" class="net.sf.jasperreports.engine.data.JRBeanCollectionDataSource"/>
	<queryString language="sql"><![CDATA[]]></queryString>

	<field name="title" class="java.lang.String"/>
	<field name="author" class="java.lang.String"/>
	<field name="isbn" class="java.lang.String"/>
	<field name="category" class="java.lang.String"/>

	<background/>

	<title>
		<band height="120">
			<rectangle>
				<reportElement x="0" y="0" width="555" height="80" backcolor="#428FED"/>
			</rectangle>
			<staticText>
				<reportElement x="0" y="0" width="555" height="50"/>
				<textElement textAlignment="Center" verticalAlignment="Middle">
					<font size="22" isBold="true"/>
				</textElement>
				<text><![CDATA[Books Report]]></text>
			</staticText>
			<staticText>
				<reportElement x="0" y="50" width="555" height="30"/>
				<textElement textAlignment="Center" verticalAlignment="Middle">
					<font size="16"/>
				</textElement>
				<text><![CDATA[All the Book info.]]></text>
			</staticText>
		</band>
	</title>

	<detail>
		<band height="130">
			<staticText>
				<reportElement x="30" y="0" width="100" height="20"/>
				<text><![CDATA[Title:]]></text>
			</staticText>
			<textField>
				<reportElement x="140" y="0" width="300" height="20"/>
				<textFieldExpression><![CDATA[$F{title}]]></textFieldExpression>
			</textField>

			<staticText>
				<reportElement x="30" y="30" width="100" height="20"/>
				<text><![CDATA[Author:]]></text>
			</staticText>
			<textField>
				<reportElement x="140" y="30" width="300" height="20"/>
				<textFieldExpression><![CDATA[$F{author}]]></textFieldExpression>
			</textField>

			<staticText>
				<reportElement x="30" y="60" width="100" height="20"/>
				<text><![CDATA[ISBN:]]></text>
			</staticText>
			<textField>
				<reportElement x="140" y="60" width="300" height="20"/>
				<textFieldExpression><![CDATA[$F{isbn}]]></textFieldExpression>
			</textField>

			<staticText>
				<reportElement x="30" y="90" width="100" height="20"/>
				<text><![CDATA[Category:]]></text>
			</staticText>
			<textField>
				<reportElement x="140" y="90" width="300" height="20"/>
				<textFieldExpression><![CDATA[$F{category}]]></textFieldExpression>
			</textField>
		</band>
	</detail>

	<columnFooter/>
	<pageFooter>
		<band height="20">
			<textField pattern="Page {0}">
				<reportElement x="450" y="0" width="100" height="20"/>
				<textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
			</textField>
		</band>
	</pageFooter>

	<summary/>
</jasperReport>
